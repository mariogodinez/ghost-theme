{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="border-bottom:4px solid #02344a; background-size:cover;height:510px; background-image: url({{image}}){{else}}no-cover{{/if}}">

<header class="post-header" style="text-align:center; color:white; padding-top:1em;  font-size:1.4em; ">
      
        <div class="beta">
            
                Version beta
        
        </div>



            <h1 class="post-title" style="color:white; text-transform:capitalize; font-size:1.6em; text-shadow:3px 3px 0px #000;">{{title}}</h1>
            <section class="post-meta" style="border:0;">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}" style="text-shadow:2px 2px 0px #000;">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
            </section>
        </header>
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}">
            <figure class="logo hvr-buzz-out" style="position:relative; top:170px; font-size:1.2em !important; ">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" style="border-color:#02344a;" />
            </figure>
            </a>{{/if}}
    </nav>
</header>

<main class="content-view" role="main">
    <article class="content-post-view-all">

        <section class="post-content-view">
            {{content}}
        </section>

        <footer class="post-footer">

        {{! Everything inside the #author tags pulls data from the author }}
        {{#author}}

            {{#if image}}
            <figure class="author-image">
                <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></a>
            </figure>
            {{/if}}

            <section class="author">
                <h4><a href="{{url}}">{{name}}</a></h4>

                {{#if bio}}
                    <p>{{bio}}</p>
                {{else}}
                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                {{/if}}
                <div class="author-meta">
                    {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                    {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                </div>
            </section>

        {{/author}}

            <section class="share" style="color:white;">
                    <h4 style="color:white;">Te gust√≥ este post?, Ayudame a compartirlo para que otr@s puedan leerlo!</h4>

                <div class="share-redes">
                    <a class="icon-twitter" style="color:#40A8E2;" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <span class="hidden">Twitter</span>
                    </a>
                    <a class="icon-facebook" style="color:#405799;" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <span class="hidden">Facebook</span>
                    </a>
                    <a class="icon-google-plus" style="color:#C53835;" href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <span class="hidden">Google+</span>
                    </a>
                </div>
            </section>

        </footer>

    </article>
</main>

<aside class="next-prev">

    
 <div style="width:400px; margin-right:60px;">

        {{#next_post}}
       
            <a href="{{url}}" style="position:relative; top:-5px; left:40%;"> 
                < Anterior
            </a>
        <div class="read-next{{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">

           
            <section class="next-prev-info">
                <h2 style="color:white">{{title}}</h2>
                <p>{{excerpt words="25"}}&hellip;</p>
            </section>
        </div>

        </div>
        {{/next_post}}
    


    <div style="width:400px;">


        {{#prev_post}}
        
            <a href="{{url}}" style="position:relative; top:-5px; left:40%;"> 
                Siguiente >
            </a>
        <div class="read-next{{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">

           
            <section class="next-prev-info">
                <h2 style="color:white">{{title}}</h2>
                <p>{{excerpt words="19"}}&hellip;</p>
            </section>
        </div>
        {{/prev_post}}
    </div>
</aside>
   
